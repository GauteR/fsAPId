# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Docker volume path (default: /app/data)
DOCKER_VOLUMES_PATH=/app/data

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API server port (default: 8000)
API_PORT=8000

# Local directory for volume data (will be created if it doesn't exist)
VOLUME_DATA_DIR=./docker-volume-data
